    @RenderSection("Scripts", false)

    <script>
        $(document).ready(function () {
            $(document).on("click", ".menu_btn_down", function () {
                if ($(this).parent().find("ul").hasClass("oculto"))
                {
                    $(this).parent().find("ul").removeClass("oculto")
                }
                else
                {
                    $(this).parent().find("ul").addClass("oculto")
                }
            });
        });
    </script>
    <!-- end: JavaScript-->
</head>

