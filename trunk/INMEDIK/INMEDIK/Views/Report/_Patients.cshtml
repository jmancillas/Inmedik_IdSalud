<div id="pacientes-tab" ng-if="mc.initPatients" class="tab-pane fade in" ng-controller="PatientsController as pc" ng-init="pc.StartController({'HTA': 'Hipertension', 'DM': 'Diabetes'},'@Url.Action("GetClinicsSelectCurrentUser", "Clinic")');pc.InitTable('@Url.Action("GetPatientsReport","Report")')">
    <div class="clearfix"></div>
    <div class="form-group col-md-3">
        <label for="warehouses" class="control-label col-md-3">Clínicas: </label>
        <div class="col-md-9">
            <multiselect ng-model="pc.Filters.clinics" ng-change="pc.ApplyFilters()" show-select-all="true" show-unselect-all="true" options="pc.clinics" display-prop="name" id-prop="id" labels="pc.labels" placeholder="Seleccione..."></multiselect>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="col-md-12 no-padding-sides" ng-repeat="(key,name) in pc.Diseases">
        <h4>{{name}}</h4>
        <div class="table-responsive">
            <table id="table-{{key}}" datatable dt-options="pc.dtOptions[key]" dt-columns="pc.dtColumns" dt-instance="pc.dtInstance[key]" class="table table-striped table-bordered dt-responsive nowrap"></table>
        </div>
    </div>
</div>